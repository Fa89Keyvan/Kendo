
@{
    ViewData["Title"] = "Index";
}

<h2>Products</h2>


<hr />
<input type="text" name="name" value="" id="txtName" />
<button id="btnSearch">Search</button>
<div id="grid"></div>
<script>
    $(document).ready(function () {
        $("#grid").kendoGrid({
            dataSource: {
                type: "aspnetmvc-ajax",
                //type:"webapi",
                transport: {
                    read:
                        {
                            url: "/Home/Persons",
                            method: "POST",
                            data: function (options) {
                                console.log(options);
                                return options;
                            }
                        },
                },
                schema: {
                    total: "Total",
                    data: "Data",
                    model: {
                        fields: {
                            Id: { type: "number" },
                            Name: { type: "string" },
                            LastName: { type: "string" },
                            Age: { type: "number" }
                        }
                    }
                },
                pageSize: 20,
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            height: 550,
            filterable: true,
            sortable: true,
            pageable: true,


            columns:
                [
                    { field: "Id", filterable: true, selectable: true },
                    { field: "Name", filterable: true },
                    { field: "Age", filterable: true }
                ]
        });
    });

    function getSelectedPersons() {
        var gridData = $("#grid").data("kendoGrid");
        var rows = gridData.select();
        var lstPersons = new Array();
        rows.each(function (index, row) {
            lstPersons.push(gridData.dataItem(row));
        });
        return lstPersons;
    }

    $('#btnSearch').click(function () {

        var grid = $('#grid').data('kendoGrid');
        var dataSource = grid.dataSource;

        dataSource.options.transport.read.data = { name: $('#txtName').val() };

        dataSource.read();
        grid.refresh();
    });
</script>



